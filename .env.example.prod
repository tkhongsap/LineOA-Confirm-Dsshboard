# Production Mode Configuration
# This mode connects to the production PostgreSQL database

# Operation mode (required)
MODE=PROD

# Data retention period in days
RETENTION_DAYS=30

# Production database configuration
# WARNING: Use environment-specific secrets management (e.g., AWS Secrets Manager, Azure Key Vault)
PROD_DB_HOST=your-prod-database.example.com
PROD_DB_PORT=5432
PROD_DB_NAME=delivery_prod
PROD_DB_USER=prod_user
PROD_DB_PASSWORD=<secure-password-from-secrets-manager>

# Server port
PORT=5000

# Log level (debug | info | warn | error)
LOG_LEVEL=warn

# Optional: Connection pool settings
# DB_POOL_MIN=5
# DB_POOL_MAX=20

# Optional: SSL/TLS settings
# DB_SSL=true
# DB_SSL_REJECT_UNAUTHORIZED=true